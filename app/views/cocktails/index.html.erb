<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(https://i2-prod.walesonline.co.uk/lifestyle/food-drink/article11749714.ece/ALTERNATES/s615/Locke-and-Remedy.jpg);">
  <div class="banner-content">
    <h1>All Cocktails</h1>
    <p>View all of our cocktails</p>
    <%= link_to "Creat a new cocktail", new_cocktail_path, class:"btn btn-primary btn-lg" %>
  </div>

</div>


<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://i.ndtvimg.com/i/2016-05/vodka-cocktails-625_625x350_51463123217.jpg');">
        <div class="card-category"><%= cocktail.name %></div>
        <div class="card-description">
          <% cocktail.doses.each do |dose| %>
          <li class = "card-list"><%= dose.amount %> of <%= dose.ingredient.name %></li>
          <% end %>
        </div>
        <%= link_to "View cocktail", cocktail_path(cocktail), class:"card-link" %>
      </div>
    </div>
    <% end %>
  </div>
</div>

